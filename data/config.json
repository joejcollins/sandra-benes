{
  "application": {
    "name": "Sandra Benes Data Manager",
    "version": "1.0.0",
    "description": "Scientific data file management system inspired by Sandra Benes, Data Section Coordinator"
  },
  "data_settings": {
    "supported_formats": ["csv", "json", "txt", "md", "log"],
    "max_file_size_mb": 16,
    "auto_backup": true,
    "validation_enabled": true
  },
  "display_settings": {
    "rows_per_page": 50,
    "syntax_highlighting": true,
    "dark_theme": true,
    "auto_save_interval_seconds": 30
  },
  "security": {
    "upload_validation": true,
    "file_type_checking": true,
    "content_validation": true
  },
  "features": {
    "file_upload": true,
    "file_download": true,
    "file_editing": true,
    "search_filtering": true,
    "auto_save": true,
    "syntax_highlighting": true
  }
}
